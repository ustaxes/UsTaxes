{
  "name": "ustaxes",
  "version": "0.1.13",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@tauri-apps/api": "^1.0.0-beta.8",
    "@tauri-apps/cli": "^1.0.0-beta.10",
    "ajv": "^8.6.3",
    "lodash": "^4.17.21",
    "loglevel": "^1.7.1",
    "node-fetch": "^2.6.1",
    "pdf-lib": "^1.17.0",
    "react": "^17.0.1",
    "react-device-detect": "^2.1.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.17.5",
    "react-number-format": "^4.7.3",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "ts-json-schema-generator": "^0.96.0",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "start": "node ./notice.js && ts-node ./scripts/setup.ts && craco start",
    "build": "ts-node ./scripts/setup.ts && craco build",
    "test": "ts-node ./scripts/setup.ts && craco test",
    "eject": "craco eject",
    "desktop-release": "ts-node ./scripts/setup.ts && tauri build",
    "desktop": "node ./notice.js && ts-node ./scripts/setup.ts && tauri dev",
    "test:report": "npm run test -- --coverage .",
    "tauri": "tauri",
    "schema-generate": "node ./setup.js",
    "lint": "eslint ./src --ext ts,js,tsx,jsx --max-warnings=0 && prettier -c .",
    "lint:fix": "eslint ./src --fix --ext ts,js,tsx,jsx && prettier --write .",
    "prettier": "prettier --write .",
    "formgen": "ts-node ./scripts/formgen.ts",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.4.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/node": "^16.11.6",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-redux": "^7.1.20",
    "@types/react-router-dom": "^5.3.2",
    "@types/redux-logger": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "fast-check": "^2.19.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "2.4.1",
    "react-router-last-location": "^2.0.1",
    "ts-node": "^10.4.0",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown .",
    "*.{ts,js,tsx,jsx}": "eslint ./src --cache --fix"
  },
  "jest": {
    "moduleNameMapper": {
      "^ustaxes/(.*)": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@tauri-apps)"
    ]
  },
  "engines": {
    "yarn": "please-use-npm"
  }
}
