{
  "name": "ustaxes",
  "version": "0.1.10",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@tauri-apps/api": "^1.0.0-beta.8",
    "@tauri-apps/cli": "^1.0.0-beta.10",
    "ajv": "^8.6.2",
    "lodash": "^4.17.21",
    "loglevel": "^1.7.1",
    "node-fetch": "^2.6.1",
    "pdf-lib": "^1.16.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.14.1",
    "react-if": "^4.0.1",
    "react-number-format": "^4.7.3",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.1",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "ts-json-schema-generator": "^0.95.0",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "node ./notice.js && node ./setup.js && craco start",
    "build": "node ./setup.js && craco build",
    "test": "node ./setup.js && craco test",
    "eject": "craco eject",
    "test:report": "node ./setup.js && craco test -- --coverage",
    "desktop-release": "node ./setup.js && tauri build",
    "desktop": "node ./notice.js && node ./setup.js && tauri dev",
    "tauri": "tauri",
    "schema-generate": "node ./setup.js",
    "lint": "eslint ./src --ext .ts --ext .js --ext .tsx --ext .jsx && prettier -c .",
    "lint:fix": "eslint ./src --fix --ext .ts --ext .js --ext .tsx --ext .jsx && prettier --write .",
    "prettier": "prettier --write .",
    "formgen": "ts-node ./scripts/formgen.ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@craco/craco": "^6.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.7.8",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/redux-logger": "^3.0.9",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "fast-check": "^2.17.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "ts-node": "^10.2.1",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "eslint ./src --ext .ts --ext .js --ext .tsx --ext .jsx",
      "post-merge": "node ./setup.js"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "jest": {
    "moduleNameMapper": {
      "^ustaxes/(.*)": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@tauri-apps)"
    ]
  },
  "engines": {
    "yarn": "please-use-npm"
  }
}
